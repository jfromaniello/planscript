{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PlanScript",
  "scopeName": "source.planscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#declarations" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.planscript",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.planscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.planscript",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.planscript" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.planscript",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.planscript" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.planscript" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.planscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.percentage.planscript",
          "match": "-?\\b\\d+(\\.\\d+)?%"
        },
        {
          "name": "constant.numeric.planscript",
          "match": "-?\\b\\d+(\\.\\d+)?\\b(m|cm|mm|ft|in)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.planscript",
          "match": "\\b(plan|room|footprint|opening|assert|defaults)\\b",
          "captures": {
            "1": { "name": "keyword.control.planscript" }
          }
        },
        {
          "name": "keyword.other.planscript",
          "match": "\\b(units|origin|axis|grid)\\b"
        },
        {
          "name": "storage.type.planscript",
          "match": "\\b(polygon|rect|door|window)\\b"
        },
        {
          "name": "variable.parameter.planscript",
          "match": "\\b(door_width|window_width)\\b"
        },
        {
          "name": "keyword.operator.planscript",
          "match": "\\b(at|size|center|span|from|to|between|and|on|width|swing|sill|edge|label|wall_thickness)\\b"
        },
        {
          "name": "keyword.control.attach.planscript",
          "match": "\\b(attach|align|gap)\\b"
        },
        {
          "name": "keyword.control.assertion.planscript",
          "match": "\\b(inside|no_overlap|openings_on_walls|min_room_area|rooms_connected|all_rooms|rooms|shared_edge)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "entity.name.function.planscript",
          "match": "(?<=(room|plan|opening\\s+door|opening\\s+window)\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "constant.language.direction.planscript",
          "match": "\\b(north_of|south_of|east_of|west_of|north|south|east|west)\\b"
        },
        {
          "name": "constant.language.alignment.planscript",
          "match": "\\b(top|bottom|left|right|center)\\b"
        },
        {
          "name": "constant.language.axis.planscript",
          "match": "\\b(up|down|x|y)\\b"
        },
        {
          "name": "constant.language.unit.planscript",
          "match": "\\b(meters|m|cm|mm|ft|in)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.planscript",
          "match": ">=|<=|>|<"
        },
        {
          "name": "keyword.operator.accessor.planscript",
          "match": "\\."
        },
        {
          "name": "keyword.operator.assignment.planscript",
          "match": ":"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.begin.planscript",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.planscript",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.planscript",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.planscript",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.comma.planscript",
          "match": ","
        }
      ]
    }
  }
}
